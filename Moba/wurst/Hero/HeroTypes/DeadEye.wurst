constant real array ABILITY_DEATH_COIL_DMG_BASE = [100, 125, 150, 175, 200]
constant real array ABILITY_DEATH_COIL_DMG_FACTOR = [20, 30, 40, 50, 60]
constant real ABILITY_DEATH_COIL_DMG_BASE_BONUS = 200
constant real ABILITY_DEATH_COIL_DMG_FACTOR_BONUS = 20
constant real ABILITY_DEATH_COIL_DURATION = 10

constant integer BUFF_ID_ON_DEATH_COIL = compiletime(BUFF_ID_GEN.next())

@compiletime
function deathpact()

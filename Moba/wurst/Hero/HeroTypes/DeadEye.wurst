        ABILITY_DEATH_COIL_DURATION.str(),
        ABILITY_DEATH_COIL_DMG_BASE[lvl-1].str()+ABILITY_DEATH_COIL_DMG_BASE_BONUS.getBonusString(C_INT),
        ABILITY_DEATH_COIL_DMG_FACTOR[lvl-1].str()+ABILITY_DEATH_COIL_DMG_FACTOR_BONUS.getBonusString(C_INT)))

    let aDefDeathCoil = createTargetMissile(ABILITY_DEATH_COIL, BUFF_ID_ON_DEATH_COIL)
        ..setLevels(5)
        ..setButtonPositionNormalX(3)
        ..setButtonPositionNormalY(2)
        ..setHotkeyNormal("R")
        ..presetIcon("BTNDeathCoil")
        ..setHeroAbility(false)
        ..setMissileArt("Abilities\\Spells\\Undead\\DeathCoil\\DeathCoilMissile.mdl")
        ..setMissileArc(0)
        ..setMissileSpeed(1100)
        ..setArtSpecial("Abilities\\Spells\\Undead\\DeathCoil\\DeathCoilSpecialArt.mdl")

    for lvl = 1 to 5
        aDefDeathCoil
        ..setCastRange(lvl, RANGE[lvl-1])
        ..setManaCost(lvl, 0)
